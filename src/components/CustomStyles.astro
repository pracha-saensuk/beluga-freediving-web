<style is:inline is:global>
 
 @font-face {
  font-family: 'Prompt';
  font-style: normal;
  font-display: swap;
  font-weight: 400;
  src: url(/fonts/prompt-thai-400-normal.woff2) format("woff2"),
       url(/fonts/prompt-thai-400-normal.woff) format("woff");
  unicode-range: U+0E01-0E5B, U+200C-200D, U+25CC;
}

@font-face {
  font-family: 'Prompt';
  font-style: normal;
  font-display: swap;
  font-weight: 400;
  src: url(/fonts/prompt-vietnamese-400-normal.woff2) format("woff2"),
       url(/fonts/prompt-vietnamese-400-normal.woff) format("woff");
  unicode-range: U+0102-0103, U+0110-0111, U+0128-0129, U+0168-0169, U+01A0-01A1, U+01AF-01B0, U+0300-0301, U+0303-0304, U+0308-0309, U+0323, U+0329, U+1EA0-1EF9, U+20AB;
}

@font-face {
  font-family: 'Prompt';
  font-style: normal;
  font-display: swap;
  font-weight: 400;
  src: url(/fonts/prompt-latin-ext-400-normal.woff2) format("woff2"),
       url(/fonts/prompt-latin-ext-400-normal.woff) format("woff");
  unicode-range: U+0100-02AF, U+0304, U+0308, U+0329, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
}

@font-face {
  font-family: 'Prompt';
  font-style: normal;
  font-display: swap;
  font-weight: 400;
  src: url(/fonts/prompt-latin-400-normal.woff2) format("woff2"),
       url(/fonts/prompt-latin-400-normal.woff) format("woff");
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}
  :root {
    --aw-font-sans: 'Prompt';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(11, 79, 236);
    --aw-color-secondary: #0067CE;
    --aw-color-accent: rgb(241, 6, 84); /* More colorful accent */

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(21, 21, 21);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3, 6, 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Prompt';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(0, 163, 224);
    --aw-color-secondary: rgb(0, 113, 124);
    --aw-color-accent: rgb(72, 61, 139); /* More colorful accent */

    --aw-color-text-heading: rgb(3, 37, 65);
    --aw-color-text-default: rgb(229, 236, 246);
    --aw-color-text-muted: rgb(229, 236, 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
